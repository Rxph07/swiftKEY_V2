<Window x:Class="swiftKEY_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:swiftKEY_V2"
        mc:Ignorable="d"
        Title="swiftKEY" Height="450" Width="800">

    <StackPanel Margin="20">
        <ComboBox x:Name="cb_COMPorts" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" ItemsSource="{Binding COMPorts}"
                  Text="COM-Port wählen" SelectedIndex="-1"
                  SelectionChanged="cb_COMPorts_SelectionChanged"
                  DropDownOpened="cb_COMPorts_DropDownOpened">
        </ComboBox>
    </StackPanel>
</Window>
